@model AssetSelfExpressionModel
@inject IStringLocalizer<Teram.HR.Module.Assets.Controllers.AssetSelfExpressionController> localizer

<form id="frmSaveAssets" asp-action="Save" asp-controller="AssetSelfExpression" method="post" data-ajax="true" data-ajax-method="post" data-ajax-success="onSuccess">
    <input type="hidden" asp-for="AssetSelfExpressionId" />
    <div class="col-lg-12 IncomingGoodsInspectionContainer">
        <div class="row">
            <text-box asp-for="PlaqueNumber" name="PlaqueNumber" id="PlaqueNumber" reverse="true" validation-type="Number" title="@localizer["PlaqueNumber"]" validation-required-message="@localizer["Please enter QualityInspectionNumber"]" div-class="col-xs-4 col-md-4 col-lg-4  d-flex flex-column-reverse align-items-start pl-lg-2 pl-md-2" />
            <div class="col-xs-2 col-md-2 col-lg-2  align-items-start" style="margin-top:30px!important">
                <button type="button" id="btnFetchData" class="btn btn-success w-100">@localizer["LoadData"] </button>
            </div>
        </div>
        <div class="row">
            <text-box asp-for="AssetID" is-readonly="true" title="@localizer["AssetID"]" validation-required-message="@localizer["Please enter AssetID"]" div-class="col-xs-12 col-md-6 col-lg-3   align-items-start pl-lg-2 pl-md-2" />
            <text-box id="Title" asp-for="Title" is-readonly="true" title="@localizer["Title"]" validation-required-message="@localizer["Please enter Title"]" div-class="col-xs-12 col-md-6 col-lg-3   align-items-start pl-lg-2 pl-md-2" />
            <text-box id="Code" asp-for="Code" is-readonly="true" title="@localizer["Code"]" validation-required-message="@localizer["Please enter Code"]" div-class="col-xs-12 col-md-6 col-lg-3   align-items-start pl-lg-2 pl-md-2" />
            <text-box id="Remarks" asp-for="Remarks" title="@localizer["Remarks"]" validation-required-message="@localizer["Please enter Remarks"]" div-class="col-xs-12 col-md-6 col-lg-3   align-items-start pl-lg-2 pl-md-2" />
        </div>
    </div>
    <div class="form-row" style="margin-top:20px;">
        <div class="form-group col-xs-12 col-md-12 col-lg-12 text-center">
            <button type="submit" class="btn btn-success">@localizer["Save"] </button>
            <button type="button" class="btn btn-secondary resetForm resetButton">@localizer["New"] </button>
        </div>
    </div>
</form>
