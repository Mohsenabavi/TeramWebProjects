@using Teram.HR.Module.Recruitment.Models.WorkWithUs;
@model EmergencyContactModel
@inject IStringLocalizer<Teram.HR.Module.Recruitment.Controllers.WorkWithUsController> localizer

@{
    int index = ViewBag.index == null ? 0 : ViewBag.index;
    List<EmergencyContactModel> emergencyContactModel = new List<EmergencyContactModel>();
    for (int i = 0; i <= index; i++)
    {
        emergencyContactModel.Add(new EmergencyContactModel());
    }
}
<div class="EmergencyContacts-row mt-2">
    <i class="fas fa-times-circle text-danger mt-2 mr-2 removeInfo" id="removeEmergencyContacts"></i>
    <div class="row">
        <text-box asp-for="Name" is-required="true" ame="EmergencyContacts[@index].Name" reverse="true" validation-type="Persian" title="@localizer["name"]" validation-required-message="@localizer["Please enter name"]" div-class="col-xs-12 col-lg-3 col-md-6  d-flex flex-column-reverse align-items-start" />
        <text-box asp-for="LastName" is-required="true" ame="EmergencyContacts[@index].LastName" reverse="true" validation-type="Persian" title="@localizer["last name"]" validation-required-message="@localizer["Please enter last name"]" div-class="col-xs-12 col-lg-3 col-md-6  d-flex flex-column-reverse align-items-start" />
        <text-box asp-for="Mobile" is-required="true" ame="EmergencyContacts[@index].Mobile" reverse="true" validation-type="Mobile" title="@localizer["mobile"]" validation-required-message="@localizer["Please enter mobile"]" div-class="col-xs-12 col-lg-3 col-md-6  d-flex flex-column-reverse align-items-start" />
        <text-box asp-for="Relation" is-required="true" ame="EmergencyContacts[@index].Mobile" reverse="true" validation-type="Persian" title="@localizer["relation"]" validation-required-message="@localizer["Please enter relation"]" div-class="col-xs-12 col-lg-3 col-md-6  d-flex flex-column-reverse align-items-start" />                       
    </div>
</div>




