@model QuestionnaireQuestionModel
@inject IStringLocalizer<Teram.HR.Module.Recruitment.Controllers.QuestionnaireQuestionController> localizer
<div class="formInfo">
    <form asp-action="Save" method="post" data-ajax="true" data-ajax-method="post" data-ajax-success="onSuccess">
        <input type="hidden" asp-for="QuestionnaireQuestionId" />
        <div class="d-flex flex-row p-0">
            <select-box asp-for="QuestionnaireId" reverse="true" show-not-selected-option-title="false"
                        title="@localizer["Questionnaire"]"
                        select-class="inputBox" value="@ViewBag.Questionaires"
                        selected-value="@Model?.QuestionnaireId"
                        div-class="col-xs-12 col-md-12 col-lg-12  d-flex flex-column-reverse align-items-start pl-lg-2 pl-md-2">
            </select-box>
        </div>
        <div class="d-flex flex-row p-0">
            <select-box asp-for="QuestionId" reverse="true" show-not-selected-option-title="false"
                        title="@localizer["Questions"]"
                        select-class="inputBox" value="@ViewBag.Questions"
                        selected-value="@Model?.QuestionId"
                        div-class="col-xs-12 col-md-12 col-lg-12  d-flex flex-column-reverse align-items-start pl-lg-2 pl-md-2">
            </select-box>
        </div>
        <div class="form-row" style="margin-top:20px;">
            <div class="form-group col-xs-12 col-md-12 col-lg-12 text-center">
                <button type="submit" class="btn btn-success">@localizer["Save"] </button>
                <button type="button" class="btn btn-secondary resetForm resetButton">@localizer["New"] </button>
            </div>
        </div>
    </form>
</div>

