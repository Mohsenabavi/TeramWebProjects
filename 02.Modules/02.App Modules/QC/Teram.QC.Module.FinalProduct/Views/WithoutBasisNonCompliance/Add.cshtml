@model FinalProductNoncomplianceModel
@inject IStringLocalizer<Teram.QC.Module.FinalProduct.Controllers.QCDefectController> localizer

<form id="frmFinalProductNoncompliance" asp-action="Save" asp-controller="WithoutBasisNonCompliance" method="post" data-ajax="true" data-ajax-method="post" enctype="multipart/form-data" data-ajax-success="onSuccess">
    <input type="hidden" asp-for="FinalProductNoncomplianceId" />
    <div class="col-lg-12 FinalProductNoncomplianceContainer">
        <div class="row">
            <text-box asp-for="OrderNo" name="OrderNo" reverse="true" validation-type="Number" title="@localizer["OrderNo"]" validation-required-message="@localizer["Please enter OrderNo"]" div-class="col-xs-4 col-md-4 col-lg-4  d-flex flex-column-reverse align-items-start pl-lg-2 pl-md-2" />
            <div class="col-xs-2 col-md-2 col-lg-2  align-items-start" style="margin-top:30px!important">
                <button type="button" id="btnFetchData" class="btn btn-success w-100">@localizer["LoadData"] </button>
            </div>
            <select-box style="justify-content: flex-end;" id="GoodsList" reverse="true" name="GoodsList" not-selected-option-title="-- یک محصول انتخاب کنید --" title="محصولات مرتبط"
                        validation-required-message="@localizer["Please select a Product"]"
                        class="col-12 col-md-3 col-lg-6 d-flex flex-column-reverse align-items-start" select-class="inputBox select2">
            </select-box>
        </div>
    </div>
</form>

