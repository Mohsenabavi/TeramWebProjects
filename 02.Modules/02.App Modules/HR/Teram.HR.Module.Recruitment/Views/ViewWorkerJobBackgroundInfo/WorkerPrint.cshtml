@using Teram.Framework.Core.Extensions
@using Teram.Web.Core.Helper
@model ViewWorkerJobBackgroundInfoModel
@inject IStringLocalizer<Teram.HR.Module.Recruitment.Controllers.ViewWorkerJobBackgroundInfoController> localizer

@{
    Layout = "~/Views/Shared/_ControlPanelLayout.fa-IR.cshtml";
}

<div id="printContent">
    <div class="container mt-5">
        <div class="border border-secondary" style="padding:20px;">
            <div class="row border-bottom">
                <div class="col-sm-12 col-md-12 col-lg-12 text-center">
                    <h2>@localizer["Local inquiry form"]</h2>
                </div>
            </div>          
            <div class="row mt-2">
                <div class="col-4 col-md-3 col-lg-3 text-right">
                    <span style="font-size:11pt;font-weight:bold">@localizer["FullName"] : @Model.FullName</span>
                </div>
                <div class="col-3 col-md-3 col-lg-3 text-right">
                    <span style="font-size:11pt;font-weight:bold">@localizer["JobTitle"] : @Model.JobTitle</span>
                </div>
                <div class="col-3 col-md-3 col-lg-3 text-right">
