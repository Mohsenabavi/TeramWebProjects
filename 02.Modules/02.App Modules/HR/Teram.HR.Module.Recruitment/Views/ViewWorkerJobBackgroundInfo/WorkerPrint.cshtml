                        <label style="font-size:12pt;font-weight:bold" class="form-check-label" for="inlineCheckbox1">@localizer["IsMatched"]</label>
                        <input class="form-check-input" type="checkbox" id="inlineCheckbox1" value="option1">
                    </div>
                </div>
                <div class="col-2 col-md-2 col-lg-2">
                    <label style="font-size:12pt;font-weight:bold" class="form-check-label" for="inlineCheckbox2">@localizer["IsNotMatched"]</label>
                    <input class="form-check-input" type="checkbox" id="inlineCheckbox2" value="option2">
                </div>
                <div class="col-4 col-md-4 col-lg-4">
                    <div class="line-container">
                        <span class="line"></span>
                    </div>
                </div>

            </div>

            <div class="row mt-2">
