<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="x-ua-compatible" content="ie=edge">

    <title> @ViewBag.PageName </title>

    <partial name="_panelStyles" />
    @RenderSection("Styles", false)
</head>
<body class="hold-transition sidebar-mini">
    @{
        var panelType = Teram.Web.Core.ControlPanel.PanelType.User;
    }
    <div class="wrapper">
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            @await Component.InvokeAsync("Navbar", new { panelType = panelType })
            <ul class="navbar-nav mr-auto">
                @*@await Component.InvokeAsync("MiniShoppingCart", new { panelType = panelType })*@
                @await Component.InvokeAsync("Notification", new { panelType = panelType })
                @await Component.InvokeAsync("UserMenu", new { panelType = panelType })
           
            </ul> 
        </nav>

        @await Component.InvokeAsync("Sidebar", new { panelType = panelType })


        <div class="content-wrapper">
            @RenderBody()
        </div>

        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">
            <div class="p-3 control-sidebar-content">
                <!-- Control sidebar content goes here -->
                <div class="p-3">
                    <span>تنظیمات</span>
                    @await Component.InvokeAsync("SidebarAxillary", new { panelType = panelType })

                </div>
            </div>
        </aside>
        <!-- /.control-sidebar -->
        <footer class="main-footer">
            <div class="float-right d-none d-sm-inline">
                 @GlobalConfigurations.Title - 
            </div>
            <strong>کلیه حقوق مادی و معنوی این سامانه محفوظ است</strong> 
        </footer>
    </div>




    <partial name="_panelScripts" />

    @RenderSection("Scripts", required: false)
    @Html.RenderResources(PageResourceType.CSS)
    @Html.RenderResources(PageResourceType.JavaScript)
</body>
</html>
