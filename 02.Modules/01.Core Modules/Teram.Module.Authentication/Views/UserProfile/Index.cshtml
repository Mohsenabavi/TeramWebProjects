                                    <input type="text" data-required="required" placeholder="@userProfileLocalizer["LastName"]" required="required" asp-for="LastName" class="form-control" />
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>*@
                                <div class="col-md-4">
                                    <label for="PersianDateOfBirth">@userProfileLocalizer["DateOfBirth"]</label>

                                    @*<div class="input-group">
                                        <div class="input-group-prepend">
