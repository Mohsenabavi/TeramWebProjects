@model NoncomplianceDetailSampleSummaryModel
@inject IStringLocalizer<Teram.QC.Module.FinalProduct.Controllers.EditFinalProductNoncomplianceController> localizer


<input type="hidden" id="FinalProductNonComplianceId" value="@Model.FinalProductNonComplianceId" />

@{

    var opinionList = new List<SelectListItem>();

    if (Model.IsSeparated)

    {
        opinionList = Html.GetEnumSelectList<OpinionType>().ToList().Where(x => x.Value == ((int)OpinionType.Leniency).ToString() || x.Value == ((int)OpinionType.Waste).ToString()).ToList();

    }
    else
    {
        opinionList = Html.GetEnumSelectList<OpinionType>().ToList().Where(x => x.Value == ((int)OpinionType.Leniency).ToString() || x.Value == ((int)OpinionType.Waste).ToString() || x.Value == ((int)OpinionType.Seperation).ToString()).ToList();

    }
}


@if (Model.FirstSampleOpinionCEOFinal > 0 || (Model.FirstSampleOpinionCEO>0 && Model.FirstSampleOpinionCEOFinal==0))
{
    <fieldset class="border p-2 m-2">
        <h6 class="bg-info  p-2 rounded text-light text-center"> @localizer["Sample1"]</h6>
        <div class="row">
            <text-box reverse="true" title="@localizer["SamplePercent"]" asp-for="@Model.FirstSamplePercent" validation-type=Number is-readonly="true"
                      div-class="col-md-6 col-lg-2 mb-3 d-flex flex-column-reverse align-items-start" />
            <text-box reverse="true" title="@localizer["FirstSamplePalletCount"]" asp-for="@Model.FirstSamplePalletCount" validation-type=Number is-readonly="true"
                      div-class="col-md-6 col-lg-2 mb-3 d-flex flex-column-reverse align-items-start" />
            <text-box reverse="true" title="@localizer["Total"]" asp-for="@Model.FirstSampleTotalCount" validation-type=Number is-readonly="true"
                      div-class="col-md-6 col-lg-2 mb-3 d-flex flex-column-reverse align-items-start" />

            <text-box reverse="true" title="@localizer["FirstSampleOpinionText"]" asp-for="@Model.FirstSampleOpinionText" validation-type=None is-readonly="true"
                      div-class="col-md-6 col-lg-3 mb-3 d-flex flex-column-reverse align-items-start" />

            <text-box reverse="true" title="@localizer["FirstSampleSeparatedCount"]" asp-for="@Model.FirstSampleSeparatedCount" validation-type=None is-readonly="true"
                      div-class="col-md-6 col-lg-3 mb-3 d-flex flex-column-reverse align-items-start" />


            <text-box reverse="true" title="@localizer["FirstSampleOpinionCEOText"]" asp-for="@Model.FirstSampleOpinionCEOText" validation-type=None is-readonly="true"
                      div-class="col-md-6 col-lg-6 mb-3 d-flex flex-column-reverse align-items-start" />

            <div class=" col-xs-12 col-md-6 col-lg-6 mt-2">
                <label class="forms-label mb-0">@localizer["FirstSampleOpinionCEOFinal"] </label>




                <select asp-for="@Model.FirstSampleOpinionCEOFinal" name="FirstSampleOpinionCEOFinal" required
                        class="form-control select2 opinionList"
                        asp-items="@opinionList">
                    <option value="">@localizer["select item"]</option>
                </select>
            </div>
        </div>
    </fieldset>
    <hr />
}

