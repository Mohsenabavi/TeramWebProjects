@page
@model RegisterModel

@inject IStringLocalizer<AuthenticationSharedResource> Localizer2
@{
    ViewData["Title"] = Localizer2["Register"];
}

<partial name="_RegisterStylePartial" />
<div class="card-body register-card-body">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <h5 class="login-box-msg">@Localizer2["CreateNewAccount"]</h5>
            <div class="form-group border-top  alert alert-warning notification">
                <div class="text-justify" style="">
                    <span class="warning-note">
                        @Localizer2["Notify"]
                    </span>
                    <ul>
                        <li>
                            <span>@Localizer2["Note First"]</span>
                        </li>
                        <li>
                            <span>@Localizer2["Note Second"]</span>
                        </li>
                        <li>
                            <span>@Localizer2["Note Third"]</span>
                        </li>
                        <li>
                            <span>@Localizer2["Note Six"]</span>
                        </li>
                        <li>
                            <span>@Localizer2["Note Fourth"]</span>
                        </li>
                        <li>
                            <span>@Localizer2["Note Fifth"]</span>
                        </li>
                        <li>
                            <span>لطفاً جهت مشاهده و دریافت راهنمای ثبت نام <a href='http://static.Teramgroup.com/srm/help/SRM_Registration_Guide.pdf' target='_blank'>اینجا</a> کلیک کنید.</span>
                        </li>
                    </ul>

                </div>
            </div>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-8">
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post" data-ajax="true" data-ajax-success="onSuccess">
                <div class="form-group text-right">
                    <label class="form-check-label" for="inlineRadio1">@Localizer2["Person Type"]</label>

                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" asp-for="Input.PersonType" value="1">
                        <label class="form-check-label m-2" tabindex="1" for="inlineRadio1">@Localizer2["Real Person"]</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" asp-for="Input.PersonType" value="2">
                        <label class="form-check-label m-2" tabindex="2" for="inlineRadio2">@Localizer2["Legal Person"]</label>
                    </div>
                </div>
                <span asp-validation-for="Input.PersonType" class="text-danger"></span>
                <div class="input-group mb-3">
                    <input type="text" asp-for="Input.NationalCode" dir="ltr" tabindex="3" class="form-control" placeholder=@Localizer2["National Code"]>
                    <div class="input-group-append">
                        <span class="fa fa-user input-group-text"></span>
                    </div>
                </div>
                <span asp-validation-for="Input.NationalCode" class="text-danger"></span>

                <div class="input-group mb-3 ">
                    <input asp-for="Input.Email" tabindex="4" dir="ltr" type="text" class="form-control text-left" placeholder=@Localizer2["Email"]>
                    <div class="input-group-append">
                        <span class="fa fa-envelope input-group-text"></span>
                    </div>
                </div>
                <span asp-validation-for="Input.Email" class="text-danger"></span>

                <div class="input-group mb-3">
                    <input asp-for="Input.Password" dir="ltr" tabindex="5" type="password" id="input-pwd" class="form-control" placeholder=@Localizer2["Password"]>
                    <span toggle="#input-pwd" class="fa fa-fw fa-eye field-icon-confirm toggle-password"></span>
                    <div class="input-group-append">
                        <span class="fa fa-lock input-group-text"></span>
                    </div>
                </div>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
                <div class="input-group mb-3">
                    <input asp-for="Input.ConfirmPassword" dir="ltr" tabindex="6" type="password" id="input-pwd-confirm" class="form-control" placeholder=@Localizer2["ConfirmPassword"]>
                    <span toggle="#input-pwd-confirm" class="fa fa-fw fa-eye field-icon-confirm toggle-password"></span>
                    <div class="input-group-append">
                        <span class="fa fa-lock input-group-text"></span>
                    </div>
                </div>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                <div class="mb-3">
                    <button type="submit" tabindex="7" class="btn btn-primary">@Localizer2["Register"]</button>
                    <button type="button" tabindex="8" asp-page="@Model.CallBackHome()" id="btnbackhome" class="btn btn-secondary">@Localizer2["Back Home"] </button>
                </div>
                <div class="form-group">
                    <partial name="_Message" />
                </div>
                <div class="form-group">
                    <p>
                        <a class="LoginBtn" tabindex="9" asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">@Localizer2["ExistAccount"]</a>
                    </p>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
