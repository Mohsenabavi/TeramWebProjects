@model InvitationModel

@inject IStringLocalizer<Teram.HR.Module.Recruitment.Controllers.JobApplicantControlPanelController> localizer

<input type="hidden" asp-for="JobApplicantId" id="CurrrentJobApplicantId" />


<div class="row">
    <date-picker reverse="true" asp-for="InvitationToWorkDate" asp-for-text="PersianInvitationToWorkDate" id="InvitationToWorkDate" show-label="true" title="@localizer["InvitationToWorkDate"]" div-class="col-12 col-md-4 form-group col d-flex flex-column-reverse align-items-start " />
</div>

<div class="row">
    <div class="form-group col-xs-12 col-md-9 col-lg-9 text-center"></div>
    <div class="form-group col-xs-12 col-md-3 col-lg-3 text-center">
        <button id="btnInvite" type="button" class="btn btn-success" style="float:left">@localizer["Invite"] </button>
    </div>
</div>



