@inject SignInManager<TeramUser> SignInManager
@inject UserManager<TeramUser> UserManager
@using Microsoft.AspNetCore.Identity
@using Teram.Module.Authentication.Models


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>گروه صنعتی ترام چاپ - @ViewData["Title"]</title>
    <link href="~/css/fontiran.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/lib/icofont/icofont.css" rel="stylesheet" />
    <link href="~/lib/owl-carousel/owl.carousel.js" rel="stylesheet" />
    <link href="~/lib/aos/aos.css" rel="stylesheet" />
    <link href="~/lib/BoxIcons/css/boxicons.css" rel="stylesheet" />
    <link href="~/lib/fontawesome/css/all.css" rel="stylesheet" />

    <link href="~/lib/notiflix/notiflix-3.2.4.min.css" rel="stylesheet" />
    <link href="~/lib/select2/css/select2.css" rel="stylesheet" />
    <link href="~/lib/Animate.css/animate.min.css" rel="stylesheet" />

    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/Themes/Default/css/theme.css" rel="stylesheet" />
</head>
<body>
    <div class="mainContainer">
        <div id="cover-spin"></div>
        <!-- ======= Header ======= -->
        <header id="header" class="d-flex align-items-center">
            <div class="container-fluid">
                <div class="row">
                    <div class="col">
                        <div class="picture-image float-right">
                            <img src="~/Images/Logos/LogoTeram.png" class="brand-image-xl logo-xs" style="max-height:97px" />
                        </div>
                        <div class="float-right mt-5 mr-2 pt-2">
                            <h1 class="text-light d-inline-block"><span style="font-size:1.2rem;display:block">سامانه ارتباط  با تامین کنندگان</span></h1>
                        </div>
                    </div>
                    <div class="col-md-auto" style="padding-top:20px">
                    </div>
                    <div class="col col-lg-2 text-center">
                        <img src="~/Images/Logos/Arm.png" width="78" height="78" />
                        <span class="text-light" style="font-size:0.7rem;display:block">Supply Relationship Management</span>
                        <h1 class="text-light" style="font-size:0.6rem"><span>Teram Industrial Group</span></h1>
                    </div>
                </div>
            </div>
        </header>
        <header id="menu">
            <div class="d-flex">
                <div class="flex-grow-1">
                    <partial name="_componentSafeLoad" model='new ComponentInformation {  ComponentName="PageNavigation" }' />
                </div>
                <div class="ml-5 mt-2">
                    <partial name="_simpleLoginPartial" />
                </div>
            </div>
        </header>
        <!-- End Header -->


        <main id="main" role="main">

            <div class="container-fluid pt-5 pb-5" id="AboutUs">
                <div class="row">
                    <div class="col">
                        <section id="content" class="content">
                            <div class="container">
                                <div class="row">
                                    @await Component.InvokeAsync("Pane", new { paneName = "content", pageId = Model.PageId })
                                </div>
                            </div>
                        </section>
                    </div>




                </div>
            </div>

        </main><!-- End #main -->
        <!-- ======= Footer ======= -->
        <footer id="footer">

            <div class="footer-top">
                <div class="container-fluid">
                    <h3>گروه صنعتی ترام چاپ</h3>
                    <div class="row">

                        <div class="col-lg-3 col-md-6 footer-contact">
                            <h4>اطلاعات تماس</h4>
                            <div class="textwidget">
                                <div class="snowa-footer-right2">
                                    <div class="column-wrapper">
                                        <ul class="snowa-link-ul">
                                            <li>
                                                <span class="icon-wrapper circle-no">
                                                    <i class="fa fa-user" aria-hidden="true"></i>
                                                </span>
                                                <a>صالحی - (مدیر ارتباط با تامین کنندگان)</a>
                                            </li>
                                            <li>
                                                <span class="icon-wrapper circle-no">
                                                    <i class="fa fa-user" aria-hidden="true"></i>
                                                </span>
                                                <a>دادخواه - (رئیس ارزیابی تامین کنندگان)</a>
                                            </li>
                                            <li>
                                                <span class="icon-wrapper circle-no">
                                                    <i class="fa fa-phone" aria-hidden="true"></i>
                                                </span>
                                                <a>031-45693460</a>
                                            </li>
                                            <li>
                                                <span class="icon-wrapper circle-no">
                                                    <i class="fa fa-mobile" aria-hidden="true"></i>
                                                </span>
                                                <a>09126714226</a>
                                            </li>
                                            <li>
                                                <span class="icon-wrapper circle-no">
                                                    <i class="fa fa-map-marker" aria-hidden="true"></i>
                                                </span>
                                                <a>
                                                    اصفهان–شهرک صنعتی مورچه خورت<br />
                                                    خیابان شیخ بهایی اول–شرکت حایر آسا
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>

                        </div>

                        <div class="col-lg-3 col-md-6 footer-links">
                            <h4>لینکهای مفید</h4>
                            <ul>
                                <li><i class="bx bx-chevron-left"></i> <a href="#">صفحه اصلی</a></li>
                                <li><i class="bx bx-chevron-left"></i> <a href="/page/privacy">حریم خصوصی</a></li>
                            </ul>
                        </div>

                        <div class="col-lg-3 col-md-6 footer-links">
                            <h4>لینک ها</h4>
                            <ul>
                                <li>
                                    <i class="bx bx-chevron-left"></i>
                                    <a href="http://www.Teramgroup.com" target="_blank">گروه صنعتی ترام چاپ</a>
                                </li>
                                <li>
                                    <i class="bx bx-chevron-left"></i>
                                    <a href="http://Teramgroup.ir" target="_blank" rel="noopener noreferrer">گروه توسعه ترام چاپ</a>
                                </li>
                                <li>
                                    <i class="bx bx-chevron-left"></i>
                                    <a href="http://www.aparat.com/snowa/%D8%A7%D8%B3%D9%86%D9%88%D8%A7" target="_blank"
                                       rel="noopener noreferrer">کانال رسمی اسنوا</a>
                                </li>
                            </ul>
                        </div>

                        <div class="col-lg-3 col-md-6 footer-links">
                            <h4>شبکه های اجتماعی ما</h4>
                            <p>ما را در سایر شبکه های اجتماعی دنبال کنید</p>
                            <div class="social-links mt-2">
                                <a href="http://instagram.com/Teramgroup/" class="instagram"><i class="bx bxl-instagram"></i></a><span style="margin-right:8px">اینستا گرام ترام چاپ</span><br />
                            </div>
                            <div class="social-links mt-2">
                                <a href="" class=""><i class="fa fa-envelope" aria-hidden="true"></i></a><span style="margin-right:8px">srm@Teramgroup.com</span><br />
                            </div>

                        </div>

                    </div>
                </div>
            </div>

            <div class="container" style="padding-top:30px;">
                <div class="copyright">
                    &copy; کلیه حقوق مادی و معنوی این سایت متعلق به  <strong><span><a href="http://www.Teramgroup.com" target="_blank"> گروه صنعتی ترام چاپ</a> </span></strong> میباشد.
                </div>

            </div>
        </footer><!-- End Footer -->


        @RenderBody()
        @await Component.InvokeAsync("ModuleSelector", new { pageId = Model.PageId })

        <a href="#" class="back-to-top"><i class="icofont-simple-up"></i></a>

        <partial name="_defaultThemeScripts" />
        <script src="~/Themes/Default/js/default.js"></script>


        @RenderSection("Scripts", required: false)
        @Html.RenderResources(PageResourceType.CSS)
        @Html.RenderResources(PageResourceType.JavaScript)


    </div>
</body>
</html>
