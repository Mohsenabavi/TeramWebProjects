                                                <input class="custom-control-input" type="radio" value="true" id="Male" asp-for="Gender">
                                                <label for="Male" class="custom-control-label">@sharedResourceLocalizer["Male"]</label>
                                            </div>
                                        </div>
                                    </div>*@
                                    @*<span asp-validation-for="Gender" class="text-danger"></span>*@


                                </div>


                                @*<partial name="_componentSafeLoad" model='new ComponentInformation {  ComponentName="ProvinceSelector", Arguments=new Dictionary<string, object> { {"countryFieldName","Country" },{ "provinceFieldName","City"} }  }' />

