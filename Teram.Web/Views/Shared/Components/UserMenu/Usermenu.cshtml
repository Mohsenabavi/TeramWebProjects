@model Teram.Web.Core.Security.IUserPrincipal
@using Teram.Framework.Core.Extensions
@inject IStringLocalizer<SharedResource> sharedLocalizer

<li class="dropdown user user-menu">
    <a href="#" class="dropdown-toggle" aria-expanded="false" role="button" data-bs-toggle="dropdown">
        <img src="@(string.IsNullOrEmpty(Model.UserInfo.Image)?"/lib/admin-lte-rtl/dist/img/user2-160x160.jpg":Model.UserInfo.Image)" class="user-image" alt="@Model.Fullname">
        <span class="hidden-xs"> @Model.Fullname</span>
    </a>
    <ul class="dropdown-menu">
        <!-- User image -->
        <li class="user-header">
            <img src="@(string.IsNullOrEmpty(Model.UserInfo.Image)?"/lib/admin-lte-rtl/dist/img/user2-160x160.jpg":Model.UserInfo.Image)" class="user-image" alt="@Model.Fullname">

            <p>
                @Model.Fullname                
            </p>
        </li>
        <!-- Menu Body -->
        <!--<li class="user-body">
            <div class="row">
                <div class="col-xs-4 text-center">
                    <a href="#"></a>
                </div>

            </div>-->
        <!-- /.row -->
        <!--</li>-->
        <!-- Menu Footer-->
        <li class="user-footer">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "My", new { area = "" })">

                <div class="pull-left">
                    <a href="/UserProfile/ChangePassword" class="btn btn-default btn-flat">تغییر کلمه عبور</a>
                </div>
                <div class="pull-right">
                    <button id="logout" type="submit" class="btn btn-default btn-flat">@sharedLocalizer["Sign Out"]</button>
                </div>
            </form>

        </li>
    </ul>
</li>