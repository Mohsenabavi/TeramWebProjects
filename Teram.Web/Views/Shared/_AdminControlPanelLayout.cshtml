<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="x-ua-compatible" content="ie=edge">

    <title>@ViewBag.PageName controlpanel</title>
    <partial name="_panelStyles" />
      @RenderSection("Styles", false)
</head>
<body class="hold-transition sidebar-mini">
    <div id="cover-spin"></div>

    @{
        var panelType = Teram.Web.Core.ControlPanel.PanelType.Managment;

    }
    <div class="wrapper">
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            @await Component.InvokeAsync("Navbar", new { panelType = panelType })
            <ul class="navbar-nav mr-auto">
                @await Component.InvokeAsync("Notification", new { panelType = panelType })
                @await Component.InvokeAsync("UserMenu", new { panelType = panelType })
            </ul>
        </nav>

        @await Component.InvokeAsync("Sidebar", new { panelType = panelType })


        <div class="content-wrapper">
            <div class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1 class="m-0 text-dark">@(ViewBag.PageName ?? "ControlPanel")</h1>
                        </div>
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-right">
                                <li class="breadcrumb-item"><a href="#">Home</a></li>
                                <li class="breadcrumb-item active">Starter Page</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
            @RenderBody()

        </div>

        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">
            <!-- Control sidebar content goes here -->
            <div class="p-3">
                <h5>Title</h5>
                <p>Sidebar content</p>
            </div>
        </aside>
        <!-- /.control-sidebar -->
        <footer class="main-footer">
            <div class="float-right d-none d-sm-inline">
                Teram @GlobalConfigurations.Title
            </div>
            <strong>Copyright &copy; 2023 <a href="http://www.Teramgroup.com">Teram </a>.</strong> All rights reserved.
        </footer>
    </div>


  <partial name="_panelScripts" />

    @RenderSection("Scripts", required: false)
    @Html.RenderResources(PageResourceType.CSS)
    @Html.RenderResources(PageResourceType.JavaScript)
</body>
</html>
