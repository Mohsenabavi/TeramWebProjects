@model List<WidgetAttribute>


@foreach (var item in Model)
{
    <div class="flex-row selectedWidget" id="selectedWidget" data-title="@item.Name" data-moduleName="@item.ModuleName" data-columnSize="@item.ColumnSize" data-paymentType="@((int)item.PanelType)">
        <div draggable="true">
            <div class="flex flex-noshrink flex-column" style="min-height: 100px;border-radius: 20px;">
                <div class="flex-row p-1">
                    <div class="widget-catalog-image" style="width: 90px; float: left;">
                        <img alt="" class="bolt-image flex-noshrink contain" src="@item.Image" style=" align-self: center; justify-self: center; display: block; width: 80%; height: auto; margin-top: 10px;">
                    </div>
                    <div class="widget-details">
                        <div class="widget-name-container">
                            <div class="widget-name font-weight-bold">@item.Name</div>
                        </div>
                        <div class="widget-description">@item.Description</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
@if (Model.Count > 0)
{
    <div>
        <button type="button" id="AddToDashboard" class="btn btn-info AddToDashboard" style="position: absolute; bottom: 0; left: 0;">
            افزودن
        </button>
    </div>
}



