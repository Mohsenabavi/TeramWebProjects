@section Styles{
    <link rel="stylesheet" href="~/lib/md.bootstrappersiandatetimepicker/jquery.md.bootstrap.datetimepicker.style.css" asp-append-version="true">

}
@section Scripts{
    <script type="text/javascript" src="~/lib/md.bootstrappersiandatetimepicker/jquery.md.bootstrap.datetimepicker.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#dobPicker").MdPersianDateTimePicker({

                targetTextSelector: '#PersianDateOfBirth',
                targetDateSelector: '#DateOfBirth',
                dateFormat: 'yyyy-MM-dd',
                isGregorian: false,
                enableTimePicker: false,
                disableBeforeToday: false,
            });
        });
    </script>
}