                                    </div>
                                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>*@

                                </div>
                            </div>
                            <div class="d-flex">
                                <div class="col-md-4">
                                    <label for="Gender">@userProfileLocalizer["Gender"]</label>

                                    @*<div class="custom-control custom-radio">
                                        <div class="d-flex">
                                            <div class="col-md-3">
                                                <input class="custom-control-input" type="radio" value="false" id="Female" asp-for="Gender">
